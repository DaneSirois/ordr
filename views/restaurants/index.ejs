

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Ordr</title>
    <link rel="stylesheet" type="text/css" href="./stylesheets/restaurant.css">
    <!-- <script type="text/javascript" src=".../public/javascripts/restaurant.js"></script> -->


  </head>
<body>

  <main class="container">
  <div class="chit_container">
      <%let order_id;%>
      <%let customer_name;%>
      <%let dishes;%>
      <%let order_date;%>
      <%let completed;%>

      <% for(var order of dbData) {%>
      <%  order_id      = order.id;%>
      <%  customer_name = order.customer_name;%>
      <%  dishes        = order.dishes;%>
      <%  order_date    = order.order_date;%>
      <%  completed     = order.completed%>

    <div class="order_chit">
       <header>
        <button class="remove_chit" type="button">Queued: click to finish</button>
        <h2 id = "order_id"><%=order_id%></h2>
        <h4><%=order_date%></h4>
       </header>
       <div>
         <ul>
           <%for(let key in dishes) {%>
              <li>
                <span id = "dish_name"><%=key%></span>
                <span id = "dish_quantity"><%=dishes[key]%></span>
              </li>
           <%}%>
         </ul>
       </div>
    </div>
  <%}%>

</div>
  </main>
  <footer>

  </footer>


  <script src="./javascripts/bundle.js"></script>

</body>
</html>



